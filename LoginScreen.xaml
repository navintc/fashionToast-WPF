<Window x:Class="fashionApp2.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fashionApp2"
        mc:Ignorable="d"
        Title="Login to FashionToast" Height="728" Width="1280">





    <Border Background="LightGray" CornerRadius="30" Margin="834,30,86,30">

        <StackPanel Margin="24,40,28,40">
            <Label Content=" Login Details" 
                   Foreground="Black" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left"/>

            <Separator></Separator>

            <Label Content="How would you like to login?" 
                   FontSize="18" 
                   
                   FontWeight="SemiBold" Margin="0,69,0,0"/>

            <Separator></Separator>

            <RadioButton FontSize="18" 
                         FontWeight="SemiBold"
                         Name="radioCustomer" IsChecked="True">
                Customer</RadioButton>

            <RadioButton FontSize="18" 
                         FontWeight="SemiBold"
                         Name="radioAdmin">
                Admin</RadioButton>

            <Separator Margin="0,26,0,2"></Separator>



            <Label Content="Username"  
                   HorizontalAlignment="Center" 
                   Foreground="Black"  
                   FontSize="18" 
                   FontWeight="SemiBold" Margin="0,0,-0.4,0" Width="302"/>


            <TextBox x:Name="txtUserName" 
                     Background="White" 
                     MaxWidth="500" 
                     
                     FontSize="22" Text="customer"/>
            <Label Content="Password" 
                   Foreground="Black"  
                   FontSize="18" 
                   FontWeight="SemiBold" Margin="0,17,15.6,0"/>

            <PasswordBox Name="txtpw" 
                         
                         Background="White" 
                         MaxWidth="500" 
                          
                         FontSize="22" Password="password"/>
            <Button Background=" #eeeeee" 
                    MaxHeight="70" 
                    MaxWidth="100" 
                    x:Name="btnLogin" 
                    Click="btnLogin_Click" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Content="Login" 
                    Margin="40 30"  
                    Foreground="Black"/>



        </StackPanel>

    </Border>





</Window>
